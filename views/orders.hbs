<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
    <title>Orders - Food Crush</title>
    <link rel="stylesheet" href="/CSS/noProductFound.css">
    <link rel="stylesheet" href="/CSS/orders.css">
</head>

<body>

    <div class="header">
        {{> navbar}}
    </div>

    <div class="small-container">
        <h2 class="title" style="margin-top:30px">Orders</h2>
    </div>
    {{#each products}}
        <div class="small-container cart-page">
            <table>
                <tr>
                    <th>Order</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                </tr>
                {{#each this.items}}
                    <tr onclick="window.location.href='/productdetails/{{this.userid}}/{{this.pid}}';">
                        <td>
                            <div class="cart-info">
                                <img src="/images/food{{this.pid}}.jpg" alt="">
                                <div>
                                    <p>{{this.pname}}</p>
                                    <small>Price: INR. {{this.price}}</small>
                                </div>
                            </div>
                        </td>
                        <td><span style="text-transform: capitalize;">{{this.quantity}}</span></td>
                        <td>INR. {{multiply this.quantity this.price}}</td>
                    </tr>
                {{/each}}
            </table>
            <div class="bill-section">
                <h3>Order details</h3>
                <table>
                    <tr>
                        <td>Order Date</td>
                        <td>{{dateFormat this.orderdate "DD/MM/YYYY"}}</td>
                    </tr>
                    <tr>
                        <td>Subtotal</td>
                        <td>INR. {{calculateTotalPrice this.items}}</td>
                    </tr>
                    <tr>
                        <td>Tax</td>
                        <td>12.5%</td>
                    </tr>
                    <tr>
                        <td>Total</td>
                        <td>INR. {{calculateTotalPriceWithTax this.items}}</td>
                    </tr>
                </table>
            </div>
        </div>
    {{/each}}

    {{#if products}}
    {{else}}
        <div class="image-container">
            <img src="/images/product-not-found.gif" alt="Image">
            <h3>No orders done...</h3>
        </div>
    {{/if}}

    {{> footer}}

</body>
</html>
